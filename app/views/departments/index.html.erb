<h2><%= @page_title%></h2>
<table class="table table-striped">
	<tr>
		<th>Department name</th>
		<th>Action</th>
	</tr>
	<% @departments.each do |department|%>
	<tr>
		<td><%= department.name %></td>
		<td> <%= link_to 'Edit', edit_department_path(department.id), class:'btn btn-primary' %> <%= link_to 'Delete', department_path(department), method: :delete, data: {confirm: 'Are you sure?'}, class:'btn btn-danger' %> </td>
	</tr>
	<% end %>
</table>
