<h2><%= @page_title%></h2>
<table class="table table-striped">
	<tr>
		<th>Module Code</th>
		<th>Module Name</th>
		<th>Department Name</th>
		<th>levele</th>
		<th>Action</th>
	</tr>
	<% @courses.each do |course|%>
	<tr>
		<td><%= course.module_code %></td>
		<td><%= course.module_name %></td>
		<td><%= course.department.name %></td>
		<td><%= course.level.level %></td>
		<td> <%= link_to 'Edit', edit_course_path(course.id), class:'btn btn-primary' %> <%= link_to 'Delete', course_path(course), method: :delete, data: {confirm: 'Are you sure?'}, class:'btn btn-danger' %> </td>
	</tr>
	<% end %>
</table>